<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AddDriverActivity"
    android:orientation="vertical">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtContact"
        android:hint="Contact"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/txtName"
        android:layout_alignEnd="@+id/txtName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtName"
        android:hint="Name"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/txtOwner"
        android:layout_alignStart="@+id/txtOwner" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLocation"
        android:hint="Location"
        android:layout_alignBaseline="@+id/txtCar"
        android:layout_alignBottom="@+id/txtCar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtEmail"
        android:hint="Email"
        android:layout_alignBaseline="@+id/txtCar"
        android:layout_alignBottom="@+id/txtCar"
        android:layout_alignLeft="@+id/txtOwner"
        android:layout_alignStart="@+id/txtOwner" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtOwner"
        android:hint="Owner"
        android:layout_below="@+id/txtContact"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtCar"
        android:hint="Vehicle Name"
        android:layout_above="@+id/btnAddPerson"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/btnAddPerson"
        android:onClick="addPersonClick"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
